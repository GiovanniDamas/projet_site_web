<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">

	<!-- ========================================================== -->
	<!-- ======= CONFIGURATION DE LA NAVIGATION =================== -->
	<!-- ========================================================== -->


	<!-- 1 règle de naviation pour la page 'accueil.xhtml' -->
	<!-- ================================================= -->
	<navigation-rule>

		<!-- page de départ -->
		<from-view-id>/gestionCategories.xhtml</from-view-id>

		<!-- 1.2 cas de navigation : de gestionCategories.xhtml vers ajouterCategories.xhtml -->
		<navigation-case>
			<!-- 1.2.1 clé d'outcom -->
			<from-outcome>addCat</from-outcome>
			<!-- 1.2.2 destination -->
			<to-view-id>/ajouterCategories.xhtml</to-view-id>
			<!-- redirection -->
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
